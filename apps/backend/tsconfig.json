{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2018", "esnext.asynciterable"],
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
